extends ../layout/common
block content
	h1 Create
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action='/users/create', method='POST')
		.form-group
			label(for="name") Name
			input#name.form-control(type='text', name='name', value= values ? values.name: "")

		.form-group
			label(for="phonel") Phonel
			input#phonel.form-control(type='text', name='phonel', value= values ? values.phonel : "")
		button.btn.btn-outline-primary Create